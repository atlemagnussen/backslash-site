{
    "name": "backslash.site",
    "version": "1.1.0",
    "description": "atles personal blog",
    "engines": {
        "node": "18"
    },
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build:vite": "tsc && vite build",
        "build:watch": "tsc && vite build --watch",
        "build": "npm run sitemap && npm run build:vite",
        "start": "npm i && npm run dev",
        "deploy": "npm run build && firebase deploy",
        "sitemap_bug": "ts-node --esm ./generateSitemap.ts",
        "sitemap": "node generateSitemap.mjs"
    },
    "repository": {
        "type": "git",
        "url": "git+https@github.com:atlemagnussen/backslash-site.git"
    },
    "keywords": [
        "html",
        "js",
        "ts",
        "lit"
    ],
    "author": "Atle Magnussen",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^20.11.30",
        "@types/prismjs": "^1.26.3",
        "@types/showdown": "^2.0.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.3",
        "vite": "^5.2.3"
    },
    "dependencies": {
        "@lit/task": "^1.0.0",
        "lit": "^3.1.2",
        "prism-themes": "^1.4.1",
        "prismjs": "^1.29.0",
        "router-slot": "^1.5.5",
        "showdown": "^1.9.1"
    }
}
